{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/*": ["src/config/*"],
      "@entities/*": ["src/entities/*"],
      "@modules/*": ["src/modules/*"],
      "@request/*": ["src/requests/*"],
      "@response/*": ["src/response/*"],
      "@utils/*": ["src/utils/*"],
      "@service/*": ["src/services/*"]
    }
  }
}
